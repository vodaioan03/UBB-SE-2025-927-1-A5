@model List<DuoClassLibrary.Models.Exercises.Exercise>

@if (Model != null && Model.Count > 0)
{
    <ul class="list-group">
        @foreach (var exercise in Model)
        {
            <li class="list-group-item list-group-item-dark d-flex justify-content-between align-items-center">
                <span><strong>Exercise #@exercise.ExerciseId:</strong> @exercise.Question</span>
                <button type="button" class="btn btn-sm btn-outline-danger remove-exercise" data-id="@exercise.ExerciseId">Remove</button>
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">No exercises selected yet.</p>
}
