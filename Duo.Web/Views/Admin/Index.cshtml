@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/admin.css" />
<div class="admin-container">
    <div class="d-flex align-items-center mb-4">
        <a href="/" class="btn-back me-3" title="Back">
            <svg width="22" height="22" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path d="M15 18l-6-6 6-6" />
            </svg>
        </a>
        <h1 class="admin-title">Admin Page</h1>
    </div>

    <div class="admin-actions">

        <!-- Manage Sections -->
        <div class="admin-card">
            <div class="admin-card-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" />
                    <path d="M3 9h18" />
                    <path d="M9 3v18" />
                </svg>
            </div>
            <a href="~/Section/ManageSection" class="admin-card-content">
                <div class="admin-card-title">Manage Sections</div>
                <div class="admin-card-desc">Here you can view and delete sections</div>
            </a>
            <div class="admin-card-actions">
                <a href="~/Section/AddSection" class="admin-card-btn">Add Section</a>
            </div>
        </div>

        <!-- Manage Quizzes -->
        <div class="admin-card"
             style="cursor:pointer;"
             onclick="location.href='@Url.Action("ViewQuizzes","Quiz")'">
            <div class="admin-card-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
                     stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10" />
                    <path d="M8.5 12.5A.5.5 0 0 1 9 12a.5.5 0 0 1 .5.5.5.5 0 0 1-.5.5.5.5 0 0 1-.5-.5z" />
                    <path d="M12 8v4l3 3" />
                </svg>
            </div>
            <div class="admin-card-content">
                <div class="admin-card-title">Manage Quizzes</div>
                <div class="admin-card-desc">Here you can see and delete</div>
            </div>
            <a asp-controller="QuizAdmin" asp-action="CreateQuiz"
               class="admin-card-btn btn btn-primary"
               onclick="event.stopPropagation()">
                Add Quiz
            </a>
        </div>

        <!-- Manage Exams -->
        <div class="admin-card"
             style="cursor:pointer;"
             onclick="location.href='@Url.Action("ManageExam","Exam")'">
            <div class="admin-card-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                     viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="3" width="18" height="18" rx="2" />
                    <path d="M3 9h18" />
                    <path d="M9 3v18" />
                </svg>
            </div>
            <div class="admin-card-content">
                <div class="admin-card-title">Manage Exams</div>
                <div class="admin-card-desc">Here you can see and delete</div>
            </div>
            <a asp-controller="Exam" asp-action="AddExam"
               class="admin-card-btn btn btn-primary"
               onclick="event.stopPropagation()">
                Add Exam
            </a>
        </div>

        <!-- Manage Exercises -->
        <div class="admin-card"
             style="cursor:pointer;"
             onclick="location.href='@Url.Action("Manage","Exercise")'">
            <div class="admin-card-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 3v4H6V3h12zm-3 8v4H9v-4h6zm5-8H4v16h16V3z" />
                </svg>
            </div>
            <div class="admin-card-content">
                <div class="admin-card-title">Manage Exercises</div>
                <div class="admin-card-desc">Here you can see and delete</div>
            </div>
            <a asp-controller="Exercise"
               asp-action="CreateExercise"
               class="admin-card-btn"
               onclick="event.stopPropagation();">
                Add Exercise
            </a>
        </div>

    </div>
</div>
